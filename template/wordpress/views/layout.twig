<!DOCTYPE html>
<html {{ site.language_attributes }}>

<head>
  <meta charset="UTF-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- WEBSITE DETAIL -->
  <title>{{ wp_title }}</title>
  <meta name="theme-color" content=""> <!-- use Hex color -->

  {{ wp_head }}
</head>

<body class="{{ body_class }}">

  <div id="main-wrapper">

    <!-- Main Navigation Menu -->
    <nav class="main-menu">
      <div class="main-logo">
        <a href="{{ home_url }}">
          <img src="{{ images }}/favicon-big.png" alt="{{ site.name }}'s Logo">
        </a>
      </div>

      {% for item in menu.items %}
        <div class="{{ item.classes | join(' ') }}">
          <a href="{{ item.url }}">
            {{ item.title }}
          </a>

          {% if item.children %}
            <div class="child-menu">
              {% for child in item.children %}
                <a href="{{ child.url }}">{{ child.title }}</a>
              {% endfor %}
            </div>
          {% endif %}

        </div>
      {% endfor %}
    </nav>

    <!-- Search -->
    <form method="get" action="{{ home_url }}">
      <input type="search" name="s" placeholder="Enter keyword">
      <input type="submit" value="Search">
    </form>

    <!-- Main Content -->
    {% block content %}{% endblock %}

    <div id="footer-push"></div>
  </div>

  <footer class="main-footer">
    {{ site.name }} &copy; {{ "now" | date("Y") }}
  </footer>

  {{ wp_footer }}

</body>
</html>
